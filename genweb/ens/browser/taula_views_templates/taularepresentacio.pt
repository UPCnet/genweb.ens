<html xmlns="http://www.w3.org/1999/xhtml"
            xmlns:metal="http://xml.zope.org/namespaces/metal"
            xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            i18n:domain="genweb.ens"
            metal:use-macro="context/main_template/macros/master">

<body>
  <metal:custom_title fill-slot="content-title">
    <h1 class="documentFirstHeading" i18n:translate="Taula de representació">
      Taula de representació
    </h1>
  </metal:custom_title>

  <metal:content-core fill-slot="content-core">
    <nav>
        <div class="export">
            <a tal:attributes="href view/export_url">
                Exportar a format CSV
            </a>
        </div>
    </nav>
    <table class="ens-taula table-striped">
      <thead>
        <tr>
          <th style="width: 20%;">Denominació</th>
          <th style="width: 15%;">Òrgan</th>
          <th style="width: 15%;">Càrrec</th>
          <th style="width: 20%;">Persona</th>
          <th style="width: 15%;">Com a...</th>          
          <th style="width: 15%;">Data nom.</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="ens view/list">
          <td class="denominacio"><a tal:content="ens/denominacio" tal:attributes="href ens/absolute_url"/></td>
          <td tal:content="ens/organ"/>
          <td tal:content="ens/carrec"/>
          <td tal:content="ens/persona"/>
          <td tal:content="ens/carrec_envirtud"/>
          <td tal:content="ens/data_nomenament"/>
        </tr>
      </tbody>
    </table>
  </metal:content-core>
</body>
</html>
