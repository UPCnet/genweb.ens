<html xmlns="http://www.w3.org/1999/xhtml"
            xmlns:metal="http://xml.zope.org/namespaces/metal"
            xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            i18n:domain="genweb.ens"
            metal:use-macro="context/main_template/macros/master">

<body>
  <metal:custom_title fill-slot="content-title">
    <h1 class="documentFirstHeading" i18n:translate="Taula identificativa">
      Taula identificativa
    </h1>
  </metal:custom_title>

  <metal:content-core fill-slot="content-core">
    <nav>
        <div class="export">
            <a tal:attributes="href view/export_url">
                Exportar a format CSV
            </a>
        </div>
    </nav>
    <table class="ens-taula table-striped">
      <thead>
        <tr>
          <th>Codi REP</th>
          <th>Núm.</th>
          <th>Acrònim</th>
          <th>Denominació</th>
          <th>NIF</th>
          <th>Num. Identificacio</th>
          <th>Estat</th>
          <th>Fig. jurídica</th>
          <th>Tipus institució</th>
          <th>Tipologia UPC</th>
          <th>Seu social</th>
          <th>Adm. Púb. Adscrip.</th>
          <th>Participació</th>
          <th>Membres UPC</th>
          <th>Quota</th>
          <th>Etiquetes</th>
          <th>Web</th>
          <th>Entitats participants</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="ens view/list">
          <td tal:content="ens/codi"/>
          <td tal:content="ens/num_ens"/>
          <td tal:content="ens/acronim"/>
          <td class="denominacio">
            <a tal:content="ens/title" tal:attributes="href ens/absolute_url"/>
          </td>
          <td tal:content="ens/nif"/>
          <td tal:content="ens/numero_identificacio"/>
          <td i18n:translate="" tal:content="ens/estat"/>
          <td tal:content="ens/figura_juridica"/>
          <td tal:content="ens/institution_type"/>
          <td tal:content="ens/tipologia_upc"/>
          <td tal:content="python: view.getSeu(ens)"/>
          <td tal:content="ens/adscripcio"/>
          <td class="numeric" tal:content="ens/percentatge_participacio"/>
          <td tal:content="ens/nombre_membres"/>
          <td class="numeric" tal:content="ens/quota"/>
          <td>
            <div tal:define="ens_tags python: view.getTags(ens)"
                 tal:condition="ens_tags">
                <tal:rep tal:repeat="tag ens_tags">
                    <a href="#" tal:attributes="href tag/tag_url" tal:content="tag/tag_name" />
                    <span class="separator" tal:condition="not: repeat/tag/end">,</span>
                </tal:rep>
            </div>
            <div tal:content="ens/etiquetes" />
          </td>
          <td tal:content="ens/web"/>
          <td tal:content="ens/entitats_actuals"/>
        </tr>
      </tbody>
    </table>
  </metal:content-core>
</body>
</html>
