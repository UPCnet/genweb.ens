<html xmlns="http://www.w3.org/1999/xhtml"
            xmlns:metal="http://xml.zope.org/namespaces/metal"
            xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            i18n:domain="genweb.ens"
            metal:use-macro="context/main_template/macros/master">

<body>
  <metal:custom_title fill-slot="content-title">
    <h1 class="documentFirstHeading" i18n:translate="Taula identificativa">
      Taula identificativa
    </h1>
  </metal:custom_title>

  <metal:content-core fill-slot="content-core">
    <nav>
        <div class="export">
            <a tal:attributes="href view/export_url">
                Exportar a format CSV
            </a>
        </div>
    </nav>
    <table class="ens-taula table-striped">
      <thead>
        <tr>
          <th style="width: 6%;">Codi</th>
          <th style="width: 6%;">Acronim</th>          
          <th style="width: 12%;">Denominació</th>
          <th style="width: 6%;">NIF</th>
          <th style="width: 6%;">Num. Identificacio</th>
          <th style="width: 10%;">Estat</th>
          <th style="width: 6%;">Fig. jurídica</th>
          <th style="width: 12%;">Adm. Púb. Adscrip.</th>
          <th style="width: 6%;">% part.</th>
          <th style="width: 6%;">Ap. inicial</th>
          <th style="width: 6%;">Quota</th>
          <th style="width: 8%;">Etiquetes</th>
          <th style="width: 10%;">Web</th>
        </tr>
      </thead> 
      <tbody>
        <tr tal:repeat="ens view/list">
          <td tal:content="ens/codi"/>
          <td tal:content="ens/acronim"/>
          <td class="denominacio">
            <a tal:content="ens/title" tal:attributes="href ens/absolute_url"/>
          </td>
          <td tal:content="ens/nif"/>
          <td tal:content="ens/numero_identificacio"/>
          <td tal:content="ens/estat"/>
          <td tal:content="ens/figura_juridica"/>
          <td tal:content="ens/adscripcio"/>
          <td class="numeric" tal:content="ens/percentatge_participacio"/>
          <td class="numeric" tal:content="ens/aportacio"/>
          <td class="numeric" tal:content="ens/quota"/>
          <td tal:content="ens/etiquetes"/>
          <td tal:content="ens/web"/>
        </tr>
      </tbody>
    </table> 
  </metal:content-core>
</body>
</html>