<html xmlns="http://www.w3.org/1999/xhtml"
            xmlns:metal="http://xml.zope.org/namespaces/metal"
            xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            metal:use-macro="context/main_template/macros/master">

<body>
  <metal:custom_title fill-slot="content-title">
    <h1 class="documentFirstHeading" i18n:translate="Taula identificativa">
      Taula identificativa
    </h1>
  </metal:custom_title>

  <metal:content-core fill-slot="content-core">
    <nav>
        <div class="export">
            <a tal:attributes="href view/export_url">
                Exportar a format CSV
            </a>
        </div>
    </nav>
    <table class="ens-taula table-striped">
      <thead>
        <tr>
          <th style="width: 5%;">Codi</th>
          <th style="width: 15%;">Denomimació</th>
          <th style="width: 8%;">NIF</th>
          <th style="width: 10%;">Estat</th>
          <th style="width: 10%;">Fig. jurídica</th>
          <th style="width: 15%;">Seu social</th>
          <th style="width: 7%;">% part.</th>
          <th style="width: 10%;">Ap. inicial</th>
          <th style="width: 10%;">Quota</th>
          <th style="width: 10%;">Web</th>
        </tr>
      </thead> 
      <tbody>
        <tr tal:repeat="ens view/list">
          <td tal:content="ens/codi"/>
          <td class="denominacio"><a tal:content="ens/denominacio" tal:attributes="href ens/absolute_url"/></td>
          <td tal:content="ens/nif"/>
          <td tal:content="ens/estat"/>
          <td tal:content="ens/figura_juridica"/>
          <td tal:content="ens/seu_social"/>
          <td class="numeric" tal:content="ens/percentatge_participacio"/>
          <td class="numeric" tal:content="ens/aportacio"/>
          <td class="numeric" tal:content="ens/quota"/>
          <td tal:content="ens/web"/>
        </tr>
      </tbody>
    </table> 
  </metal:content-core>
</body>
</html>