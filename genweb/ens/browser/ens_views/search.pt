<html xmlns="http://www.w3.org/1999/xhtml"
            xmlns:metal="http://xml.zope.org/namespaces/metal"
            xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            metal:use-macro="context/main_template/macros/master">

<body>
  <metal:custom_title fill-slot="content-title">
    <h1 class="documentFirstHeading" i18n:translate="ens">Ens</h1>
  </metal:custom_title>

  <metal:content-core fill-slot="content-core">
    <div class="input-append">
      <div class="ens-search-field">
      <label for="search_input_figura_juridica" i18n:translate="Figura jur&iacute;dica">Figura jur&iacute;dica</label>
      <select id="search_input_figura_juridica" placeholder="Sel·lecciona">
        <option tal:repeat="option view/get_figura_juridica_vocabulary"
                tal:attributes="value python:option[0]"
                tal:content="python:option[1]"></option>
      </select>
      </div>

      <div class="ens-search-field">
        <label for="search_input_estat" i18n:translate="Estat">Estat</label>
        <select id="search_input_estat">
          <option tal:repeat="option view/get_estat_vocabulary"
                  tal:attributes="value python:option[0]"
                  tal:content="python:option[1]"></option>
        </select>
      </div>

      <div class="ens-search-field">
        <label for="search_input_text" i18n:translate="Amb el text">Amb el text</label>
        <input id="search_input_text" class="searchInput"
               type="text" placeholder="Introduïu el text a cercar"/>
        <input id="search_input_button" type="button" value="Cerca"
               class="standalone"></input>
      </div>
    </div>
    <div id="search_results"></div>
    <script type="text/javascript"
            tal:attributes="src string:${portal_url}/++genweb++ens/ens_search.js">
    </script>
  </metal:content-core>
</body>
</html>
