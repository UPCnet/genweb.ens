section.ens-metadata a
{
    color: #007BC0;
}

section.ens-metadata dt
{
    float: left;
    width: 250px;
    margin-bottom: 5px;
}

section.ens-metadata dd
{
    margin-left: 250px;
    margin-bottom: 5px;
}

section.ens-metadata h2
{
    border-bottom: 1px solid #b2b2b2;
}

section.ens-metadata th
{
    text-align: left;
}

section.ens-metadata tr
{
    border-bottom: 1px solid #ddd;
}

section.ens-metadata th.column-small
{
    width: 15%;
}

section.ens-metadata th.column-medium
{
    width: 30%;
}

section.ens-metadata th.column-center, td.column-center
{
    text-align: center;
}

section.ens-metadata dd
{
    text-align: justify;
}

section.ens-metadata-level-2
{
    padding: 0px 0px 10px 10px;
}

section.ens-metadata h3
{
    padding-bottom: 5px;
    border-bottom: 1px solid #ccc;
}

section.ens-metadata input[type=checkbox].label-aligned
{
    margin: 0px 3px 3px 0px;
}

section.ens-metadata tr.historic
{
    background: #f7f7f7;
    opacity: 0.8;
}

div.ens-search-field
{
   margin: 10px;
}

.ens-search-field label
{
    display: inline-block;
    width: 150px;
}

.ens-search-field select
{
    width: 180px;
}

.ens-search-field input[type=text]
{
    width: 166px;
}

.ens-result li:before
{
    margin-top: -7px;
}

div.ens-results
{
    margin-top: 30px;
}

.ens-results p
{
    margin: 10px;
}
