/*
 * Metadata
 */
.ens-metadata a
{
    color: #007BC0;
}

.ens-metadata dt
{
    float: left;
    width: 250px;
    margin-bottom: 5px;
}

.ens-metadata dt.subfield
{
    float: left;
    width: 235px;
    margin-left: 15px;
}

.ens-metadata dd
{
    margin-left: 250px;
    margin-bottom: 5px;
}

.ens-metadata dd.fieldset-end
{
    margin-bottom: 25px;
}

.ens-metadata h2
{
    border-bottom: 1px solid;
}

.ens-metadata th
{
    text-align: left;
}

.ens-metadata tr
{
    border-bottom: 1px solid #ddd;
}

.ens-metadata th.column-small
{
    width: 15%;
}

.ens-metadata th.column-xsmall
{
    width: 10%;
}

.ens-metadata th.column-medium
{
    width: 30%;
}

.ens-metadata th.column-center, td.column-center
{
    text-align: center;
}

.ens-metadata dd
{
    text-align: justify;
}

.ens-metadata-level-2
{
    padding: 0px 0px 10px 10px;
}

.ens-metadata h3
{
    padding-bottom: 5px;
    border-bottom: 1px solid #ccc;
}

.ens-metadata input[type=checkbox].label-aligned
{
    margin: 0px 3px 3px 0px;
}

.ens-metadata tr.historic
{
    background: #ccc;
}

/*
 * Taula
 */
table th
{
    background-color: #557c95;
}

.ens-taula .denominacio
{
    font-size: 13px;
    min-width: 300px;
}

.ens-taula th
{
    border: 1px solid white;
    color: white;
    padding: 5px;
    text-align: center;
}

.ens-taula td
{
    border: 1px solid #ededed;
    font-size: 12px;
    line-height: 14px;
    padding: 8px 6px;
}

.ens-taula td.numeric
{
    text-align: right;
}

.ens-taula tr
{
    border-bottom: 1px solid #ddd;
}

/*
 * Search
 */
.ens-results tbody tr
{
    height: 50px;
}

.ens-search-field
{
   margin: 10px;
}

.ens-search-field label
{
    display: inline-block;
    width: 150px;
}

.ens-search-field select
{
    width: 74.5%;
}

.ens-search-field select[multiple]
{
    height: 70px;
}

.ens-search-field input[type=text]
{
    width: 73%;
}

.ens-search-field input[type=checkbox]
{
    margin: 2px;
}

.ens-search-field input[type=button]
{
    background: #557c95 none repeat scroll 0 0;
    border-radius: 3px !important;
    color: white;
    font-size: 16px;
    font-weight: bold;
    height: 34px;
    margin-left: 150px;
    margin-top: 5px;
    text-shadow: none;
    width: 75%;
}

.ens-search-results
{
    margin-top: 10px;
}

.ens-search-results li:before
{
    margin-top: -7px;
}

.ens-search-results p
{
    margin: 10px;
}

#results h5
{
    margin-bottom: 0;
}

#results > li:hover
{
    background: #f9f9f9 none repeat scroll 0 0;
}

/*
 * Navigation menu
 */
nav
{
    margin: 20px 0px 20px 0px;
}

.nav.nav-pills.opcions a
 {
    background: #557c95 none repeat scroll 0 0;
    color: white;
    padding-left: 20px;
    padding-right: 20px;
}

.nav.nav-pills.opcions a:hover
{
    background: #3c5769 none repeat scroll 0 0;
}

.nav.nav-pills.opcions > li
{
    margin-right: 10px;
}

.nav.nav-pills.opcions > li:last-child
{
    margin-right: 0;
}

ul.opcions
{
    margin-bottom: 5px;
}

/*
 * Panels
 */
.ui-helper-reset
{
    border: 0 none;
    font-size: 13px;
    line-height: 1.6;
    list-style: outside none none;
    margin: 0;
    outline: 0 none;
    padding: 0;
    text-decoration: none;
}

.ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {
    background: #557c95 none repeat scroll 0 0;
    border: 1px solid #557c95;
    color: #fff;
    font-weight: normal;
    vertical-align: middle;
}

.ui-state-active, .ui-widget-content .ui-state-active, .ui-widget-header .ui-state-active
{
    background: #557c95 none repeat scroll 0 0;
    border: 1px solid #ccc;
    color: #fff;
    font-weight: bold;
}

/*
 * Other
 */
.ens-message-center
{
    text-align: center;
}

.export
{
    float: right;
    margin-bottom: 10px;
}

.pagination-center
{
   height: 50px;
   margin-left: 350px;
}

.documentDescription
{
    color: #888;
    font-size: 107.692%;
    font-weight: bold;
    line-height: 20px;
    margin-bottom: 18px;
    margin-top: 10px;
}

