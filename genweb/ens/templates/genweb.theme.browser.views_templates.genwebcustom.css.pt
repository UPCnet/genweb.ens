.share_popover
{
    display: none;
}

.input-append
{
    background: #f7f7f7 none repeat scroll 0 0;
    border: 1px solid #ddd;
    border-radius: 3px;
    padding: 20px;
}

a.header-info-link
{
    padding-top: 2px !important;
}

a.header-info-link span
{
    font-size: 22px;
}

a.header-info-link img
{
    display: none;
}

body.template-homepage #contentActionMenus > li:nth-child(-n+3) {
    display: none;
}

