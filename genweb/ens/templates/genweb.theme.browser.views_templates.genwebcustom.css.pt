.ens-metadata a
{
    color: #007BC0;
}

.ens-metadata dt
{
    float: left;
    width: 250px;
    margin-bottom: 5px;
}

.ens-metadata dd
{
    margin-left: 250px;
    margin-bottom: 5px;
}

.ens-metadata h2
{
    border-bottom: 1px solid #b2b2b2;
}

.ens-metadata th
{
    text-align: left;
}

.ens-metadata tr
{
    border-bottom: 1px solid #ddd;
}

.ens-metadata th.column-small
{
    width: 15%;
}

.ens-metadata th.column-xsmall
{
    width: 10%;
}

.ens-metadata th.column-medium
{
    width: 30%;
}

.ens-metadata th.column-center, td.column-center
{
    text-align: center;
}

.ens-metadata dd
{
    text-align: justify;
}

.ens-metadata-level-2
{
    padding: 0px 0px 10px 10px;
}

.ens-metadata h3
{
    padding-bottom: 5px;
    border-bottom: 1px solid #ccc;
}

.ens-metadata input[type=checkbox].label-aligned
{
    margin: 0px 3px 3px 0px;
}

.ens-metadata tr.historic
{
    background: #f7f7f7;
    opacity: 0.8;
}

.ens-taula th
{
    text-align: center;
    border: 1px solid #ccc;
    padding: 5px;
}

.ens-taula td
{
    border: 1px solid #ccc;
    padding: 5px;
}

.ens-taula td.numeric
{
    text-align: right;
}

.ens-taula tr
{
    border-bottom: 1px solid #ddd;
}

.ens-results tbody tr
{
    height: 50px;
}

.ens-search-field
{
   margin: 10px;
}

.ens-search-field label
{
    display: inline-block;
    width: 150px;
}

.ens-search-field select
{
    width: 180px;
}

.ens-search-field input[type=text]
{
    width: 166px;
}

.ens-search-field input[type=checkbox]
{
    margin: 2px;
}

.ens-search-field-large
{
   width: 430px;
   margin: 10px auto 10px auto;
}

.ens-search-field-large input[type=text]
{
    width: 350px;
}

.ens-search-results
{
    margin-top: 30px;
}

.ens-search-results li:before
{
    margin-top: -7px;
}

.ens-search-results p
{
    margin: 10px;
}

.ens-message-center
{
    text-align: center;
}

.pagination-center
{
   height: 50px;
   margin-left: 350px;
}

nav
{
    margin: 20px 0px 20px 0px;
}
